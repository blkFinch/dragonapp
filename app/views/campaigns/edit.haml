.header
  %h1
    DM's Page //
    =@campaign.title

.container-fluid
  .row
    .col-sm-3
      #user_display
        = link_to 'Campaign Home', campaign_path(@campaign)
        %br
        %em PLAYERS:
        .active_players
          =render partial: 'campaigns/active_user', collection: @campaign.users, as: :user 
        %h5 ADD PLAYER
        = render 'shared/search_player_form'
      .small_box
        = render 'shared/edit_campaign_name'
    .col-sm-6
      .small_gray_box
        =render partial: 'shared/email_form'

